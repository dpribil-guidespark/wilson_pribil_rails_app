<div class="row">

  <%= form_for(:req, url: req_of_the_week_path) do |f| %>

      <div class="field col-md-12 form-group">
        <%= f.text_field :title, :class => "form-control", :placeholder => "Req title" %>
      </div>

      <div class="col-md-12">
        <div class="field form-group">
          <%= f.select :department, options_for_select(DEPARTMENT_CONSTANTS.map { |x| [x[:name], x[:id]] }, 1), {}, {'class' => 'btn btn-default dropdown-toggle form-control', 'data-toggle' => 'dropdown'} %>
        </div>
      </div>

      <div class="field col-md-12 form-group">
        <%= f.text_field :manager, :class => "form-control", :placeholder => "Manager" %>
      </div>
      <div class="field col-md-12 form-group">
        <%= f.text_area :description, :class => "form-control", :placeholder => "Description" %>
      </div>

      <div class="col-md-12 actions">
            <span class="input-group-btn">
             <%= f.submit :class => 'btn btn-primary', data: { 'confirm' => 'This will add a new req of the week. Are you sure?', 'confirm-fade' => true, 'confirm-title' => 'Start a new challenge'} %>
         </span>
      </div>

  <% end %>

</div>
