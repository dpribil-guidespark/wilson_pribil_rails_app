<p id="notice"><%= notice %></p>

<h1>This week's challenge is:</h1>

<blockquote>
  <h3><%= @challenge.question %></h3>
  <footer><%= @challenge.user.first_name %> <%= @challenge.user.last_name %> </footer>
</blockquote>

<% if @challenge.hint %>
    <p>
      <strong>Hint:</strong>
      <%= @challenge.hint %>
    </p>
<% end %>

<%= render 'challenges/answer'%>

