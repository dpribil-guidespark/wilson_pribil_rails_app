<div id="my-tab-content" class="tab-content">
  <div class="tab-pane<% unless flash[:tab] || flash[:tab] ==  'challenge_tab'%> active<% end %>" id="challenge_tab">
    <h1 class="text-center">The Req of the Week is...</h1>

    <blockquote>
      <h2><%= @req.title %></h2>
      <% if @req.department %>
          <p>
            <strong>Department: </strong>
            <%= Req.get_department_name(@req.department) %>
          </p>
      <% end %>
      <% if !@req.manager.empty? %>
          <p>
            <strong>Manager: </strong>
            <%= @req.manager %>
          </p>
      <% end %>
      <% if !@req.description.empty? %>
          <p>
            <strong>Description: </strong>
            <%= @req.description %>
          </p>
      <% end %>
    </blockquote>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Know someone who might be interested?</h4>
  </div>
  <div class="panel-body">
    <p>You can share by clicking here: </p>
  </div>


</div>


