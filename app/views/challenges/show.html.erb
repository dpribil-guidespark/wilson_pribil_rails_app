<p id="notice"><%= notice %></p>

<h1>This week's challenge is:</h1>

<blockquote>
  <h3><%= @challenge.question %></h3>
  <footer><%= "#{@user.first_name} #{@user.last_name}" %></footer>
</blockquote>

<% if @challenge.hint %>
    <p>
      <strong>Hint:</strong>
      <%= @challenge.hint %>
    </p>
<% end %>

<div class="input-group">
<%= render 'challenges/answer'%>
</div>
