<h1>Listing reqs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Department</th>
      <th>Manager</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reqs.each do |req| %>
      <tr>
        <td><%= req.title %></td>
        <td><%= Req.get_department_name(req.department) %></td>
        <td><%= req.manager %></td>
        <td><%= req.description %></td>
        <td><%= link_to 'Show', req %></td>
        <td><%= link_to 'Edit', edit_req_path(req) %></td>
        <td><%= link_to 'Destroy', req, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Req', new_req_path %>
