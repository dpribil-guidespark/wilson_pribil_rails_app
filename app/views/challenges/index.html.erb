<h1>Listing challenges</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Hint</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.question %></td>
        <td><%= challenge.hint %></td>
        <td><%= challenge.answer %></td>
        <td><%= link_to 'Show', challenge_path(challenge) %></td>
        <td><%= link_to 'Edit', edit_challenge_path(challenge) %></td>
        <td><%= link_to 'Destroy', challenge_path(challenge), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Challenge', new_challenge_path %>
